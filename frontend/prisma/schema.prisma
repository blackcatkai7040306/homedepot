// Prisma Schema for Home Depot Clearance Deals App

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // Can be changed to "mongodb" if preferred
  url      = env("DATABASE_URL")
}

// Home Depot Store Locations
model HomeDepotStore {
  id          String @id @default(cuid())
  storeNumber String @unique
  name        String
  address     String
  city        String
  state       String
  zipCode     String
  latitude    Float
  longitude   Float
  phone       String?
  isActive    Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  products       StoreAvailability[]
  scannedProducts ScannedProduct[]

  @@map("stores")
}

// Products from Home Depot
model HomeDepotProduct {
  id                 String   @id @default(cuid())
  sku                String   @unique
  title              String
  description        String?
  imageUrl           String
  originalPrice      Float
  discountedPrice    Float
  discountPercentage Float
  category           String
  brand              String?
  model              String?
  upc                String?  @unique
  availability       String   @default("in_stock") // in_stock, out_of_stock, limited
  isUltraLowPrice    Boolean  @default(false) // for $0.10 and below
  lastUpdated        DateTime @updatedAt
  createdAt          DateTime @default(now())

  // Relations
  storeLocations  StoreAvailability[]
  scannedProducts ScannedProduct[]

  @@map("products")
}

// Product availability per store
model StoreAvailability {
  id           String    @id @default(cuid())
  storeId      String
  productId    String
  price        Float
  stock        Int       @default(0)
  lastScanned  DateTime?
  verifiedByUser Boolean @default(false)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  store   HomeDepotStore    @relation(fields: [storeId], references: [id], onDelete: Cascade)
  product HomeDepotProduct @relation(fields: [productId], references: [id], onDelete: Cascade)

  @@unique([storeId, productId])
  @@map("store_availability")
}

// Barcode scanning records
model ScannedProduct {
  id           String    @id @default(cuid())
  upc          String
  productId    String?
  storeId      String
  scannedPrice Float
  userId       String?   // Optional for future user system
  latitude     Float?
  longitude    Float?
  timestamp    DateTime  @default(now())

  // Relations
  store   HomeDepotStore    @relation(fields: [storeId], references: [id])
  product HomeDepotProduct? @relation(fields: [productId], references: [id])

  @@map("scanned_products")
}

// Data scraping jobs tracking
model ScrapingJob {
  id            String    @id @default(cuid())
  status        String    @default("pending") // pending, running, completed, failed
  type          String    // clearance, deals, all
  startTime     DateTime  @default(now())
  endTime       DateTime?
  productsFound Int       @default(0)
  errors        String[]  @default([])
  createdAt     DateTime  @default(now())

  @@map("scraping_jobs")
}

// User location tracking (for geolocation features)
model UserSession {
  id              String   @id @default(cuid())
  sessionId       String   @unique
  latitude        Float
  longitude       Float
  zipCode         String?
  nearestStoreId  String?
  accuracy        Float
  timestamp       DateTime @default(now())
  
  @@map("user_sessions")
}
